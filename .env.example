# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================

# OpenAI API (Cloud - Fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o  # Model for fallback (best quality)

# Ollama (Local - Primary)
OLLAMA_BASE_URL=http://localhost:11434/v1  # Ollama OpenAI-compatible API endpoint
OLLAMA_MODEL=gptoss20b  # Local model name
OLLAMA_TIMEOUT=60  # Timeout in seconds

# Fallback Strategy
LLM_FALLBACK_ENABLED=true  # Automatically fallback to OpenAI if Ollama fails

# ============================================================================
# IMPORTANCE CLASSIFIER CONFIGURATION
# ============================================================================

# Confidence Thresholds (Balanciert)
IMPORTANCE_CONFIDENCE_HIGH_THRESHOLD=0.85   # >= 0.85 → Automatic action
IMPORTANCE_CONFIDENCE_MEDIUM_THRESHOLD=0.6  # 0.6-0.85 → Review queue
# < 0.6 → Manual review required

# Importance Score Thresholds
IMPORTANCE_SCORE_LOW_THRESHOLD=0.4   # < 0.4 → Low-Priority folder
IMPORTANCE_SCORE_HIGH_THRESHOLD=0.7  # > 0.7 → High-Priority (auto-reply eligible)

# Review System
DAILY_DIGEST_ENABLED=true  # Send daily digest of emails needing review
DAILY_DIGEST_TIME=08:00    # Time to send digest (HH:MM format)

# Feedback Tracking (Learning System)
FEEDBACK_TRACKING_ENABLED=true  # Track user actions for learning
FEEDBACK_CHECK_INTERVAL_HOURS=1  # How often to check for user actions

# ============================================================================
# EMAIL ACCOUNTS
# ============================================================================

# Gmail Accounts (OAuth2 Credentials)
# Download from Google Cloud Console: https://console.cloud.google.com/
GMAIL_1_CREDENTIALS_PATH=credentials/gmail_account_1.json
GMAIL_1_TOKEN_PATH=tokens/gmail_account_1_token.json
GMAIL_1_EMAIL=your_email_1@gmail.com

GMAIL_2_CREDENTIALS_PATH=credentials/gmail_account_2.json
GMAIL_2_TOKEN_PATH=tokens/gmail_account_2_token.json
GMAIL_2_EMAIL=your_email_2@gmail.com

GMAIL_3_CREDENTIALS_PATH=credentials/gmail_account_3.json
GMAIL_3_TOKEN_PATH=tokens/gmail_account_3_token.json
GMAIL_3_EMAIL=your_email_3@gmail.com

# Ionos Mail Account (IMAP/SMTP)
IONOS_EMAIL=your_email@ionos.de
IONOS_PASSWORD=your_ionos_password
IONOS_IMAP_SERVER=imap.ionos.de
IONOS_IMAP_PORT=993
IONOS_SMTP_SERVER=smtp.ionos.de
IONOS_SMTP_PORT=587

# Backup Account (Gmail)
BACKUP_EMAIL=backup@gmail.com
BACKUP_CREDENTIALS_PATH=credentials/backup_credentials.json
BACKUP_TOKEN_PATH=tokens/backup_token.json

# Email Module Configuration
DEFAULT_MODE=draft  # Options: draft, auto_reply, manual
CLASSIFIER_BATCH_SIZE=10
RESPONDER_CONFIDENCE_THRESHOLD=0.85

# Scheduler Settings
INBOX_CHECK_INTERVAL_HOURS=1
BACKUP_DAY_OF_MONTH=1
BACKUP_HOUR=3

# Database
DATABASE_URL=sqlite:///platform.db
